@model List<AMA.WEB.Models.CategoryModel>
<header>
    <div class="header-bottom">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-auto">
                    <nav>
                        <ul class="navigation">
                            @foreach (var item in Model)
                            {
                                <li>
                                    <a href="@Url.Action("Index", "Offers", new {catagoryID=item.Id })" >@item.Name</a>
                                    @* onclick="javascript:OpenClildCategory(@item.Id)" *@
                                    <div id="categoryList_@item.Id"></div>
                                    
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>